         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>me.alexqp</groupId>
    <artifactId>phantomspawncontrol-parent</artifactId>
    <version>4.15.0</version>
    <name>PhantomSpawnControl</name>
    <url>https://www.spigotmc.org/members/alex_qp.306806/</url>
    <description>This plugin provides the ability to control phantom spawning.</description>
    <packaging>pom</packaging>
    <properties>
        <buildNo/>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <modules>
        <module>psc_core</module>
        <module>psc_dist</module>
        <module>psc_craftbukkit_1_19_R1</module>
        <module>psc_craftbukkit_1_20_R1</module>
    </modules>

    <repositories>
